<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ccs.cmn.mapper.SampleMapper">

	<select id="selectSampleSql" resultType="java.util.Map">
		SELECT J.NO, J.NAME FROM JYP J
	</select>
	
	<select id="selectDatatables" parameterType="java.util.Map" resultType="java.util.Map">
		SELECT  D.NO
				, D.NAME
				, D.AGE
				, D.CITY 
		FROM DATATABLES D
		<where>
			<if test="name!=null and !name.equals('')">
				D.NAME = #{name}
			</if>
			<if test="age!=null and !age.equals('')">
				D.AGE = #{age}
			</if>		
		</where>
	</select>
</mapper>